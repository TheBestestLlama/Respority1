import java.util.Scanner;

public class Citation
{
    public static void main(String[] args)
    {
        // Start here!
        Scanner input = new Scanner(System.in);
        System.out.println ("Enter the author's name as 'Last name, First name': ");
        String authorName = input.nextLine();
        System.out.println("Enter the year the book was published: ");
        int bookYear = input.nextInt();
        input.nextLine();
        System.out.println("Enter the title of the book: ");
        String bookTitle = input.nextLine(); 
        System.out.println ("Enter the publisher of the book: ");
        String bookPublisher = input.nextLine();
        System.out.print (authorName + ". ");
        System.out.println (bookTitle + ". ");
        System.out.print (bookPublisher + ", ");
        System.out.print (bookYear + ".");
    }
}










